//Caraousel 1 JS
<script>
            $(document).ready(function() {
              $('.owl-one').owlCarousel({
                loop: true,
                margin: 10,
                responsiveClass: true,
                responsive: {
                  0: {
                    items: 1,
                    nav: true
                  },
                  600: {
                    items: 3,
                    nav: false
                  },
                  1000: {
                    items: 3,
                    nav: false,
                    loop: true,
                    margin: 20
                  }
                }
              })
            })
    </script>
    
    //Caraousel 2 JS
    <script>
